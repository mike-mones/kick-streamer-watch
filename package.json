{
    "type": "module",
    "scripts": {
        "auth": "tsx src/auth/cli.ts",
        "build": "rollup -c",
        "pack": "streamdeck pack com.kick-streamer-watch.sdPlugin",
        "watch": "rollup -c -w --watch.onEnd=\"streamdeck restart com.kick-streamer-watch\"",
        "restart": "pkill -f \"Stream Deck\" || true && sleep 2 && open -a \"Elgato Stream Deck\"",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix"
    },
    "devDependencies": {
        "@elgato/cli": "^1.1.1",
        "@rollup/plugin-commonjs": "^28.0.0",
        "@rollup/plugin-node-resolve": "^15.2.2",
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^12.1.0",
        "@tsconfig/node20": "^20.1.2",
        "@types/node": "~20.15.0",
        "@typescript-eslint/eslint-plugin": "^8.50.0",
        "@typescript-eslint/parser": "^8.50.0",
        "eslint": "^9.39.2",
        "globals": "^16.5.0",
        "rollup": "^4.0.2",
        "tslib": "^2.6.2",
        "typescript": "^5.8.2"
    },
    "dependencies": {
        "@elgato/streamdeck": "^2.0.0",
        "open": "^11.0.0"
    }
}
